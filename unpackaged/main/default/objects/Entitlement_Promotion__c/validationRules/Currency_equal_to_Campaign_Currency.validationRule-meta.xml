<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Currency_equal_to_Campaign_Currency</fullName>
    <active>true</active>
    <description>Entitlement Promotion Currency should be equal to Campaign currency.</description>
    <errorConditionFormula>TEXT(CurrencyIsoCode) &lt;&gt;  TEXT(Promo_Mechanic__r.Campaign_Eligibility__r.Campaign__r.CurrencyIsoCode)</errorConditionFormula>
    <errorDisplayField>CurrencyIsoCode</errorDisplayField>
    <errorMessage>Currency should be equal to Campaign currency.</errorMessage>
</ValidationRule>
