<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Requires_last_Name_or_Thai_name</fullName>
    <active>true</active>
    <errorConditionFormula>AND(IsPersonAccount,ISPICKVAL( Country__c , &#39;Thailand&#39;) ,ISBLANK(LastName),ISBLANK(  LocalLanguage_Last_Name__c ))</errorConditionFormula>
    <errorMessage>Last Name or Last Name (Local Language) should be filled</errorMessage>
</ValidationRule>
