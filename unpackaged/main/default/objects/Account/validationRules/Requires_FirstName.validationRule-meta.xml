<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Requires_FirstName</fullName>
    <active>true</active>
    <errorConditionFormula>AND(IsPersonAccount, ISBLANK(FirstName),ISBLANK(Tax_Reg_Number__c))</errorConditionFormula>
    <errorDisplayField>FirstName</errorDisplayField>
    <errorMessage>First Name is mandatory</errorMessage>
</ValidationRule>
