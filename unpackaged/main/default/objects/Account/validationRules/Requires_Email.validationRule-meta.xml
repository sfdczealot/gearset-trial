<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Requires_Email</fullName>
    <active>true</active>
    <errorConditionFormula>AND(IsPersonAccount, ISBLANK(PersonEmail))</errorConditionFormula>
    <errorDisplayField>PersonEmail</errorDisplayField>
    <errorMessage>Email is mandatory</errorMessage>
</ValidationRule>
