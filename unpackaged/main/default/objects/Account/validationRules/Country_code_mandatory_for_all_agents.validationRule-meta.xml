<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Country_code_mandatory_for_all_agents</fullName>
    <active>true</active>
    <description>AUTOMATION-9176: Mobile Country should be mandatory for all agents</description>
