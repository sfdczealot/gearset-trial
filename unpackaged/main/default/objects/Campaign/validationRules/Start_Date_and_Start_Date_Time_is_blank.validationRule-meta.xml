<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Start_Date_and_Start_Date_Time_is_blank</fullName>
    <active>true</active>
    <errorConditionFormula>AND(RecordType.Name=&quot;Marketing Promo&quot;,OR(ISBLANK(StartDate),ISBLANK(Campaign_Start_DateTime__c)))</errorConditionFormula>
