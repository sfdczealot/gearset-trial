<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Discounted_Amount__c</fullName>
    <externalId>false</externalId>
    <formula>If (
Discount__c &lt;&gt; 0, ((UnitPrice * Quantity) * Discount__c)+Discount_Amount__c, 
Discount_Amount__c 
)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <inlineHelpText>Calculated by applying the Discount % or Discount Amount for this product</inlineHelpText>
    <label>Discounted Amount</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <type>Currency</type>
</CustomField>
